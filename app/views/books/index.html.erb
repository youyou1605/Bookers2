<%= render 'books/list', user: @user, book: @book %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
   <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <% end %>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>
