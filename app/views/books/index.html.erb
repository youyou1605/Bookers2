<div class="container" >
    <div class="row">
        <div class="col-md-3">
          <%= render 'books/list', user: @user, book: @book %>
        </div>
 <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
        <tr>
            <td>
    <% @books.each do |book| %>
      <%= link_to user_path(book.user) do %>
   <p><%= image_tag book.user.get_profile_image(100,100) %></p>
   <% end %>
   <%= link_to book_path(book) do %>
  <p><%= book.title %></p>
  <% end %>
  <p>Opinion <%= book.body %></p>
  </td>
  </tr>
  </tbody>
</table>
<% end %>
</div>
</div>
</div>
