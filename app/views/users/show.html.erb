<div>
    <%= flash[:notice] %>
</div>
<div class="container" >
    <div class="row">
        <div class="col-md-3">
         <%= render 'books/list', user: @user, book: @book %>
        </div>
         <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<% @books.each do |book| %>
<div>
    <%= link_to user_path(book.user) do %>
   <p><%= image_tag book.user.get_profile_image(100,100)  %></p>
   <% end %>
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <% end %>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>
</div>
</div>
</div>