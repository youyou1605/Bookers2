

<h1>User info</h1>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>
  <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>



<h1>Books</h1>
<% @books.each do |book| %>
<div>
   <p><%= image_tag book.user.get_profile_image(100,100)  %></p>
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <% end %>
  <p>Opinion <%= book.body %></p>
</div>
<% end %>
